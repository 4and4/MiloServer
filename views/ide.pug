									a(href='#') Load project
								li
									a(href='#') Download Project
								li.divider(role='separator')
								li
									a(href='#') Login or SignUp
					li.btn-group
						li.dropdown
							a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
								| Editor
								span.caret
							ul.dropdown-menu
								li
									a#runButton(href='#') Run
								li.divider(role='separator')
								li
									a#trashButton(href='#') Delete All
					li.btn-group
						li.dropdown
							a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
